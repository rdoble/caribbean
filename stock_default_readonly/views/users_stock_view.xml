<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_stock_form_inherit" model="ir.ui.view">
        <field name="name">view.users.stock.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//group[@name='preferences']" position="inside">
                <field name="stock_id"/>
            </xpath>
        </field>
    </record>
</odoo>
