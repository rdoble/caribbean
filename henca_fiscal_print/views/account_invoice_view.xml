<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ncf_manager_account_invoice_inherit_form" model="ir.ui.view">
            <field name="name">ncf_manager_account_invoice_inherit_form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_invoice_sent']" position="attributes">
                    <attribute name="string">Imprimir PDF</attribute>
                </xpath>
                <xpath expr="//header/button[@name='action_invoice_sent']" position="after">
                    <button id="fiscal_print" custom="fiscal_print" name="ipf_fiscal_print" string="Fiscal Print" type="object" class="btn-primary"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                    <field name="tax_amount_type" attrs="{'invisible':True}"/>
                    <field name="tax_amount" attrs="{'invisible':True}"/>
                </xpath>

                <field name="move_id" position="after">
                    <field name="fiscal_nif" attrs="{'invisible': [('fiscal_nif','=','false')]}"/>
                    <field name="partner_vat" />
                    <field name="ipf_printer_id" />
                    <field name="payment_ids" widget='one2many'>
                        <tree>
                            <field name='journal_id'/>
                            <field name='amount'/>
                            <field name='payment_form'/>
                        </tree>
                    </field>
                    <field name="ipf_host" invisible="1" />
                    <field name="ipf_print_copy_number" invisible="1" />
                </field>
            </field>
        </record>

    </data>
</odoo>
